@{
}


<form method="post" asp-action="Create">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Enter title">
        <span asp-validation-for="Title" class="text-danger"></span>  
    </div>
    
    <br />

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" type="text" class="form-control" placeholder="Enter description">
        <span asp-validation-for="Description" class="text-danger"></span>  
    </div>
    
    <br />
    
    <div class="form-group">
        <label asp-for="Image"></label>
        <input asp-for="Image" type="text" class="form-control" placeholder="Enter Image">
        <span asp-validation-for="Image" class="text-danger"></span>  
    </div>
    
    <br />

    <div class="form-group">
        <label asp-for="ClubCatergory">Catergory</label>
        <select asp-for="ClubCatergory" asp-items="@Html.GetEnumSelectList<ClubCatergory>()"> <!-- this is used to loop and get values inside of a enum list into the html page-->
            <option>--Select--</option>
        </select>
        <span asp-validation-for="ClubCatergory" class="text-danger"></span>  
    </div>
    
    <br />
    
    <div class="form-group">
        <label asp-for="Address.Street">Street</label>
        <input asp-for="Address.Street" type="text" class="form-control" placeholder="Enter street">
        <span asp-validation-for="Address.Street" class="text-danger"></span>  
    </div>
    
    <br />
    
    <div class="form-group">
        <label asp-for="Address.City">City</label>
        <input asp-for="Address.City" type="text" class="form-control" placeholder="Enter city">
        <span asp-validation-for="Address.City" class="text-danger"></span>  
    </div>
    
    <br />

    <div class="form-group">
        <label asp-for="Address.State">State</label>
        <input asp-for="Address.State" type="text" class="form-control" placeholder="Enter state">
        <span asp-validation-for="Address.State" class="text-danger"></span>  
    </div>
    
    <br />

  <button type="submit" class="btn btn-primary">Submit</button>
</form>